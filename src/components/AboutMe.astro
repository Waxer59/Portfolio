---
import { Image } from 'astro:assets'
import { getLangFromUrl, useTranslations } from '@i18n/utils'
import UserIcon from './icons/UserIcon.astro'
import HugoAboutMe from '../images/hugo_about_me.webp'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<section>
  <h2
    class="text-tertiary text-3xl font-bold uppercase tracking-wider flex items-center gap-4"
    id={t('nav.aboutMe')}>
    <UserIcon class="w-9 h-9 hidden sm:inline-block" />
    {t('nav.aboutMe')}
  </h2>
  <article
    class="flex flex-col md:flex-row items-center gap-8 text-secondary mt-6">
    <div
      class="order-2 md:order-1 text-pretty text-lg flex flex-col gap-4"
      set:html={t('aboutMe.description')}
    />
    <Image
      src={HugoAboutMe}
      alt={t('aboutMe.photo.alt')}
      class="object-cover w-72 rounded-2xl ring-1 ring-black/70 dark:ring-white/20 rotate-3 aspect-square p-1 lg:p-2 dark:bg-stone-700/25 order-1 md:order-2"
    />
  </article>
</section>
