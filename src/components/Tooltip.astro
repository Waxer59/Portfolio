---
interface Props {
  text: string
}

const { text } = Astro.props
---

<div class="relative group flex justify-center">
  <span
    class="absolute -top-11 opacity-0 group-hover:opacity-100 text-white transition-all bg-slate-700 py-1 px-2 rounded select-none after:content-[''] after:border-l-8 after:border-r-8 after:border-l-transparent after:border-r-transparent after:border-t-8 after:border-slate-700 after:absolute after:-bottom-2 after:mx-auto after:left-0 after:right-0 after:w-0 after:h-0"
    >{text}</span
  >
  <slot />
</div>
